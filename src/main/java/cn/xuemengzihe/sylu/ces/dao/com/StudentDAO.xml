<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xuemengzihe.sylu.ces.dao.com.StudentDAO">
	<insert id="insertStudent" parameterType="student">
		<selectKey order="AFTER" keyProperty="id" resultType="int">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO student(
			`nick`,
			`name`,
			`gender`,
			`nation`,
			`birthday`,
			`portrait`,
			`role`,
			`email`,
			`id_card`,
			`we_chat`,
			`qq_numb`,
			`alipay`,
			`phone`,
			`address`,
			`resident`,
			`motto`,
			`password`,
			`sno`,
			`class_id`,
			`major_id`,
			`teacher_id`,
			`is_valid`,
			`c_time`,
			`u_time`
		) VALUES(
			#{nick},
			#{name},
			#{gender},
			#{nation},
			#{birthday},
			#{portrait},
			#{role},
			#{email},
			#{idCard},
			#{weChat},
			#{qqNumb},
			#{alipay},
			#{phone},
			#{address},
			#{resident},
			#{motto},
			#{password},
			#{sno},
			#{classId},
			#{majorId},
			#{teacherId},
			#{isValid},
			#{cTime},
			#{uTime}
		)
	</insert>
	<insert id="insertStudentUseMap" parameterType="map">
		INSERT INTO student(
			`nick`,
			`name`,
			`gender`,
			`nation`,
			`birthday`,
			`portrait`,
			`role`,
			`email`,
			`id_card`,
			`we_chat`,
			`qq_numb`,
			`alipay`,
			`phone`,
			`address`,
			`resident`,
			`motto`,
			`password`,
			`sno`,
			`class_id`,
			`major_id`,
			`teacher_id`,
			`is_valid`,
			`c_time`
		) VALUES(
			#{nick},
			#{name},
			#{gender},
			#{nation},
			#{birthday},
			#{portrait},
			#{role},
			#{email},
			#{idCard},
			#{weChat},
			#{qqNumb},
			#{alipay},
			#{phone},
			#{address},
			#{resident},
			#{motto},
			'123456',
			#{sno},
			#{classId},
			#{majorId},
			#{teacherId},
			'Y',
			NOW()
		)
	</insert>
	<delete id="deleteStudentById" parameterType="int">
		DELETE FROM student
		WHERE id=#{id}
	</delete>
	<update id="updateStudent" parameterType="student">
		UPDATE student SET
			`nick`=#{nick},
			`name`=#{name},
			`nation`=#{nation},
			`gender`=#{gender},
			`birthday`=#{birthday},
			`portrait`=#{portrait},
			`role`=#{role},
			`email`=#{email},
			`id_card`=#{idCard},
			`we_chat`=#{weChat},
			`qq_numb`=#{qqNumb},
			`alipay`=#{alipay},
			`phone`=#{phone},
			`address`=#{address},
			`resident`=#{resident},
			`motto`=#{motto},
			`password`=#{password},
			`sno`=#{sno},
			`class_id`=#{classId},
			`major_id`=#{majorId},
			`teacher_id`=#{teacherId},
			`is_valid`=#{isValid}
		WHERE
			id=#{id}
	</update>
	<select id="findStudentById" parameterType="int" resultType="student">
		SELECT *
		FROM student
		WHERE id = #{id}
	</select>
	<select id="findStudentsOfAll" resultType="student">
		SELECT *
		FROM student
	</select>
	<select id="findInstitutesOfAllWithMapSet" parameterType="string" resultType="map">
		SELECT
			s.id id,
			s.sno sno,
			s.name name,
			s.nation nation,
			s.gender gender,
			s.phone phone,
			s.email email
		FROM student s
		WHERE
			is_valid = 'Y'
			<if test="value != null">
					AND (
						`name` LIKE '%${value}%'
						OR `nation` LIKE '%${value}%'
						OR `sno` LIKE '%${sno}%'
						OR `phone` LIKE '%${value}%'
						OR `email` LIKE '%${value}%'
						OR `gender` = #{value}
					)
			</if>
		ORDER BY s.c_time, s.u_time
	</select>
</mapper>